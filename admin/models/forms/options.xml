<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_customtables/models/rules"
	addfieldpath="/administrator/components/com_customtables/models/fields"
>
	<fieldset name="details">
                <!-- Default Fields.-->
                <!-- Id Field. Type: Text (joomla)-->
                <field name="id"
                       type="text"
                       class="readonly"
                       label="JGLOBAL_FIELD_ID_LABEL"
                       description="JGLOBAL_FIELD_ID_DESC"
                       size="10"
                       default="0" />

                <field name="optionname"
                       type="text"
                       label="COM_CUSTOMTABLES_TABLES_OPTION_NAME"
                       description="COM_CUSTOMTABLES_TABLES_OPTION_NAME_DESC"
                       size="100"
						class="text_area" />

				<field name="title"
                       type="text"
                       label="COM_CUSTOMTABLES_TABLES_TITLE"
                       description="COM_CUSTOMTABLES_TABLES_TITLE_DESC"
                       size="100"
						class="text_area" />

                <field name="ordering"
                       type="number"
                       class="inputbox validate-ordering"
                       label="COM_CUSTOMTABLES_TABLES_ORDERING_LABEL"
                       description=""
                       default="0"
                       size="6"
                       required="false" />

				<field name="parentid"
                       type="ctoption"
                       class="inputbox validate-ordering"
                       label="COM_CUSTOMTABLES_TABLES_PARENTID_LABEL"
                       description=""
                       default="0"
                       required="false" />

		        <field type="radio"
                       name="isselectable"
                       label="COM_CUSTOMTABLES_FIELDS_ISSELECTABLE_LABEL"
                       description="COM_CUSTOMTABLES_FIELDS_ISSELECTABLE_DESCRIPTION"
                       class="btn-group btn-group-yesno"
                       default="0">
                        <option value="1">COM_CUSTOMTABLES_FIELDS_YES</option>
                        <option value="0">COM_CUSTOMTABLES_FIELDS_NO</option>
                </field>

				<field
						type="textarea"
                       name="optionalcode"
                       label="COM_CUSTOMTABLES_TABLES_OPTIONALCODE_LABEL"
                       description="COM_CUSTOMTABLES_TABLES_OPTIONALCODE_DESCRIPTION"
                       class="text_area" />

				<field
						type="text"
                       name="link"
                       label="COM_CUSTOMTABLES_TABLES_LINK_LABEL"
                       description="COM_CUSTOMTABLES_TABLES_LINK_DESCRIPTION"
                       class="text_area" />


        </fieldset>

	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this tables"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_customtables"
			section="options"
		/>
	</fieldset>
</form>
